<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="bibliotecahibernate" transaction-type="RESOURCE_LOCAL">
	<class>logica.Usuario</class>
	<class>logica.Prestamo</class>
	<class>logica.Material</class>
	<class>logica.Lector</class>
	<class>logica.Bibliotecario</class>
	<class>logica.Articulo</class>
	<class>logica.Libro</class>
	<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.username" value="el-username"/>
			<property name="hibernate.connection.password" value="la-password"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5434/database-name"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
